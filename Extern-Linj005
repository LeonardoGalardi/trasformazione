			<xsl:value-of select="//TEMPLATE[@CDOGG = 'SECTI' and @CARD = '001']/CAMPO[@CODICE = 'MATR']/VALORE"/>	
			</xsl:attribute>
			
		</form>	
	</xsl:template>
	
