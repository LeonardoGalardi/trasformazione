			<xsl:text>&amp;codcab=</xsl:text>
			<xsl:value-of select="format-number(//TEMPLATE[@CDOGG = 'SECTI' and @CARD = '001']/CAMPO[@CODICE = 'CDCABEMI']/VALORE, '00000')"/>	
			<xsl:text>&amp;codfiliale=</xsl:text>
